<div class="container">

<h1>All Categories</h1>

	<table class="table">
		<tr>
			<th>Category Name</th>
		<% @Category.each do |c| %>	
		<tr>
			<td><%="#{c.name}"%></td>
			<td><%= link_to 'Edit', edit_category_path(c.id) %></td>
			<td><%= button_to 'Delete', c, method: :delete %></td>
		</tr>	
		<% end %>
	</table>	

</div>