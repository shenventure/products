<div class="container">

<h1>List of Products</h1>

	<table class="table">
		<tr>
			<th>Product Name</th>
			<th>Category</th>
			<th>Description</th>
			<th>Price</th>
			<th>Edit</th>
			<th>Delete</th>
		<% @Product.each do |p| %>	
		<tr>
			<td><%= p.name%></td>
			<td><%= p.category.name %></td>
			<td><%= p.description %></td>
			<td><%= p.pricing %></td>
			<td><%= link_to 'Edit', edit_product_path(p.id) %></td>
			<td><%= button_to 'Delete', p, method: :delete %></td>
		</tr>	
		<% end %>
	</table>	

</div>